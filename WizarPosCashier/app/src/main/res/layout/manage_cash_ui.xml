<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".Activity.CashierMainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#3a9bfc"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="返回"
                android:textSize="@dimen/back_title_size"
                android:textColor="#ffff"
                android:id="@+id/backBtn"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/themeTitle"
                android:text="收银"
                android:textSize="@dimen/ui_title_size"
                android:textColor="#ffff"
                android:textAlignment="center">

            </TextView>
            <TextView
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:id="@+id/signInBtn"
                android:background="@android:color/transparent"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.32"
                android:gravity="bottom"
                android:layout_gravity="center_horizontal"
                android:weightSum="1"
                android:background="@color/ui_deep_gray">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="@dimen/btn_text_size"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="right"
                    android:textAlignment="gravity"
                    android:focusableInTouchMode="false"
                    android:id="@+id/amountText"
                    android:layout_gravity="right"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.48"
                android:weightSum="1">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:weightSum="0.9">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="1"
                        android:textSize="@dimen/btn_text_size"
                        android:background="@drawable/layout_line_border"
                        android:id="@+id/btn1" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="2"
                        android:textSize="@dimen/btn_text_size"
                        android:background="@drawable/layout_line_border"
                        android:id="@+id/btn2" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="3"
                        android:textSize="@dimen/btn_text_size"
                        android:background="@drawable/layout_line_border"
                        android:id="@+id/btn3" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:weightSum="0.9">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="4"
                        android:textSize="@dimen/btn_text_size"
                        android:background="@drawable/layout_line_border"
                        android:id="@+id/btn4" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="5"
                        android:textSize="@dimen/btn_text_size"
                        android:background="@drawable/layout_line_border"
                        android:id="@+id/btn5" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="6"
                        android:textSize="@dimen/btn_text_size"
                        android:background="@drawable/layout_line_border"
                        android:id="@+id/btn6" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:weightSum="0.9">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="7"
                        android:textSize="@dimen/btn_text_size"
                        android:background="@drawable/layout_line_border"
                        android:id="@+id/btn7" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="8"
                        android:textSize="@dimen/btn_text_size"
                        android:background="@drawable/layout_line_border"
                        android:id="@+id/btn8" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="9"
                        android:textSize="@dimen/btn_text_size"
                        android:background="@drawable/layout_line_border"
                        android:id="@+id/btn9" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:weightSum="0.9">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="00"
                        android:textSize="20dp"
                        android:background="@drawable/layout_line_border"
                        android:id="@+id/btn00" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="0"
                        android:textSize="@dimen/btn_text_size"
                        android:background="@drawable/layout_line_border"
                        android:id="@+id/btn0" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:textAlignment="gravity"
                        android:background="@drawable/layout_line_border"

                        android:weightSum="1">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:id="@+id/btnback"
                            android:drawableLeft="@drawable/back_arrow_left"
                            android:background="@android:color/transparent" />
                    </LinearLayout>

                </TableRow>
            </TableLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.21"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="7dp"
                android:paddingTop="12dp"
                android:weightSum="1"
                android:background="@color/ui_light_gray">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:drawableTop="@drawable/crash_card_pay"
                    android:text="刷卡交易"
                    android:textSize="@dimen/img_btn_text_size"
                    android:id="@+id/crashCardBtn"
                    android:background="@android:color/transparent"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:drawableTop="@drawable/scan_cord_pay"
                    android:text="扫码支付"
                    android:textSize="@dimen/img_btn_text_size"
                    android:id="@+id/scanCodeBtn"
                    android:background="@android:color/transparent"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:drawableTop="@drawable/main_scan_pay"
                    android:text="主扫支付"
                    android:textSize="@dimen/img_btn_text_size"
                    android:id="@+id/scanMainBtn"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".Activity.CashierMainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#3bb44a"
            android:layout_gravity="center_horizontal">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:textColor="#ffff"
                android:id="@+id/backBtn"
                android:background="@drawable/arrow_back"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/hintTitle"
                android:text="柜员管理"
                android:textSize="20dp"
                android:textColor="#ffff"
                android:textAlignment="center">

            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/titleText"
            android:text="请输入主管密码"
            android:textSize="20dp"
            android:textAlignment="center"/>

        <cashier.wizarpos.com.wizarposcashier.View.PasswordInputView
            android:id="@+id/passwordInputView"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:cursorVisible="false"
            android:inputType="number"
            android:maxLength="6"
            android:focusableInTouchMode="false"
            app:pivBorderColor="#cccccc"
            app:pivBorderRadius="10dp"
            app:pivBorderWidth="10dp"
            app:pivPasswordColor="#cccccc"
            app:pivPasswordLength="6"
            app:pivPasswordWidth="10dp" />




        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="257dp"
            android:layout_marginTop="10dp"
            android:stretchColumns="0,1,2">
            <TableRow>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pwd_btn_size"
                    android:text="1"
                    android:textSize="@dimen/btn_text_size"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn1" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pwd_btn_size"
                    android:text="2"
                    android:textSize="@dimen/btn_text_size"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn2" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pwd_btn_size"
                    android:text="3"
                    android:textSize="@dimen/btn_text_size"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn3" />
            </TableRow>
            <TableRow>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pwd_btn_size"
                    android:text="4"
                    android:textSize="@dimen/btn_text_size"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn4" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pwd_btn_size"
                    android:text="5"
                    android:textSize="@dimen/btn_text_size"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn5" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pwd_btn_size"
                    android:text="6"
                    android:textSize="@dimen/btn_text_size"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn6" />
            </TableRow>
            <TableRow>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/pwd_btn_size"
                    android:text="7"
                    android:textSize="@dimen/btn_text_size"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn7" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/pwd_btn_size"
                    android:text="8"
                    android:textSize="@dimen/btn_text_size"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn8" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/pwd_btn_size"
                    android:text="9"
                    android:textSize="@dimen/btn_text_size"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn9" />
            </TableRow>
            <TableRow>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/pwd_btn_size"
                    android:text="reset"
                    android:textSize="20dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/btnreset" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/pwd_btn_size"
                    android:text="0"
                    android:textSize="@dimen/btn_text_size"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn0" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/pwd_btn_size"
                    android:text="back"
                    android:textSize="20dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/btnback" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</RelativeLayout>
